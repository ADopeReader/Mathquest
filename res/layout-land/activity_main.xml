<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rechner.MainActivity">

    <EditText
        android:id="@+id/Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Startzahl"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@id/textView1"
        android:ems="4"
        android:inputType="numberDecimal" />

    <RadioButton
        android:id="@+id/ersterZug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/reset"
        android:layout_alignLeft="@+id/addieren"
        android:layout_toLeftOf="@+id/Startzahl"
        android:checked="false" />

    <RadioButton
        android:id="@+id/zweiterZug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/reset"
        android:layout_alignRight="@id/addieren"
        android:layout_marginRight="14dp" />

    <Button
        android:id="@+id/addieren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_centerVertical="true"
        android:minHeight="@dimen/Button_Hoehe"
        android:minWidth="@dimen/Button_Hoehe"
        android:onClick="addieren"
        android:text="@string/Buttonplus"
        android:textSize="@dimen/Button_Textgr" />

    <EditText
        android:id="@+id/Startzahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/textView2"
        android:layout_marginRight="128dp"
        android:layout_toRightOf="@id/textView2"
        android:ems="4"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/dividieren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addieren"
        android:layout_alignBottom="@+id/addieren"
        android:layout_alignRight="@+id/reset"
        android:minHeight="@dimen/Button_Hoehe"
        android:minWidth="@dimen/Button_Hoehe"
        android:onClick="dividieren"
        android:text="@string/Buttongeteilt"
        android:textSize="@dimen/Button_Textgr" />

    <TextView
        android:id="@+id/Ergebnisanzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/vierterZug"
        android:layout_alignBottom="@+id/vierterZug"
        android:layout_toLeftOf="@+id/dividieren"
        android:gravity="right"
        android:linksClickable="false"
        android:text="@string/Ergebnisanzeige"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/multiplizieren"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="@string/Ziel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/normale_groesse" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:text="@string/Start"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/normale_groesse" />

    <Button
        android:id="@+id/multiplizieren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dividieren"
        android:layout_toLeftOf="@+id/Ergebnisanzeige"
        android:minHeight="@dimen/Button_Hoehe"
        android:minWidth="@dimen/Button_Hoehe"
        android:onClick="multiplizieren"
        android:paddingBottom="1dp"
        android:paddingTop="30dp"
        android:text="@string/Buttonmal"
        android:textSize="@dimen/Button_Textgr" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dritterZug"
        android:layout_toLeftOf="@+id/multiplizieren"
        android:text="@string/Ergebnis"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/subtrahieren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Startzahl"
        android:layout_centerVertical="true"
        android:layout_marginLeft="22dp"
        android:minHeight="@dimen/Button_Hoehe"
        android:minWidth="@dimen/Button_Hoehe"
        android:onClick="subtrahieren"
        android:text="@string/Buttonminus"
        android:textSize="@dimen/Button_Textgr" />

    <RadioButton
        android:id="@+id/vierterZug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dritterZug"
        android:layout_alignBottom="@+id/dritterZug"
        android:layout_alignRight="@+id/Startzahl" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/vierterZug"
        android:layout_marginRight="30dp"
        android:onClick="reset"
        android:text="@string/reset" />

    <RadioButton
        android:id="@+id/dritterZug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Startzahl"
        android:layout_alignParentBottom="true" />

</RelativeLayout>